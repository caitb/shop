        SELECT
               ml.id                ml_id,
               ml.create_time       ml_create_time,
               ml.create_man        ml_create_man,
               ml.spu_id,
               ml.sku_id,
               ml.name              ml_name,
               ml.subscription_num,
               ml.sort              ml_sort,
               ml.remark            ml_remark,

               mg.id,
               mg.create_time,
               mg.create_man,
               mg.material_library_id,
               mg.name,
               mg.is_b_show,
               mg.is_c_show,
               mg.sort,
               mg.remark,

               sku.id              sku_id,
               sku.name            sku_name
        from
               com_sku_material_library ml
        LEFT JOIN
               com_sku_material_group   mg ON mg.material_library_id = ml.id
        LEFT JOIN com_sku sku ON sku.id = ml.sku_id
        <where>
            <if test="mlId != null">
                AND ml.id = #{mlId}

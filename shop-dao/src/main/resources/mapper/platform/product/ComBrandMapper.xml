<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.masiis.shop.dao.platform.product.ComBrandMapper" >
    <resultMap id="BaseResultMap" type="com.masiis.shop.dao.po.ComBrand" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="cname" property="cname" jdbcType="VARCHAR" />
        <result column="ename" property="ename" jdbcType="VARCHAR" />
        <result column="logo_url" property="logoUrl" jdbcType="VARCHAR" />
        <result column="content" property="content" jdbcType="LONGVARCHAR" />
        <result column="remark" property="remark" jdbcType="VARCHAR" />
    </resultMap>


    <!-- 根据id查询一条记录 -->
    <select id="selectById" parameterType="Integer" resultMap="BaseResultMap">
        select id, create_time, cname, ename, logo_url, content, remark
        FROM
               com_brand
        WHERE
               id = #{id}
    </select>

    <!-- 根据条件查询记录 -->
    <select id="selectByCondition" resultMap="BaseResultMap">
        select id, create_time, cname, ename, logo_url, content, remark
        FROM
               com_brand
        <where>
            <if test="comBrand.id != null">
                id = #{comBrand.id}
            </if>
            <if test="comBrand.cname != null">
                AND cname = #{comBrand.cname}
            </if>
            <if test="comBrand.ename != null">
                AND ename = #{comBrand.ename}
            </if>
        </where>
    </select>

    <!-- 添加一条记录 -->
    <insert id="insert">
        insert into com_brand
                    (
                    id,
                    create_time,
                    cname,
                    ename,
                    logo_url,
                    content,
                    remark
                    )
        values
                    (
                    #{id,jdbcType=INTEGER},
                    #{createTime,jdbcType=TIMESTAMP}, 
                    #{cname,jdbcType=VARCHAR},
                    #{ename,jdbcType=VARCHAR},
                    #{logoUrl,jdbcType=VARCHAR},
                    #{content,jdbcType=LONGVARCHAR},
                    #{remark,jdbcType=VARCHAR}
                    )
    </insert>

    <!-- 根据id更新一条记录 -->
    <update id="updateById" parameterType="com.masiis.shop.dao.po.ComBrand">
        update com_brand
        <set>
            <if test="createTime != null">
                create_time = #{createTime,jdbcType=TIMESTAMP},
            </if>
            <if test="cname != null">
                cname = #{cname,jdbcType=VARCHAR},
            </if>
            <if test="ename != null">
                ename = #{ename,jdbcType=VARCHAR},
            </if>
            <if test="logoUrl != null">
                logo_url = #{logoUrl,jdbcType=VARCHAR},
            </if>
            <if test="content != null">
                content = #{content,jdbcType=LONGVARCHAR},
            </if>
            <if test="remark != null">
                remark = #{remark,jdbcType=VARCHAR},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>

    <!-- 根据id删除一条记录 -->
    <delete id="deleteById">
        DELETE FROM com_brand WHERE id = #{id}
    </delete>


</mapper>